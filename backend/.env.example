# ======================
# CONFIGURACIÓN GENERAL
# ======================
DEBUG=True
SECRET_KEY=change-this-to-a-very-long-random-string-in-production

# ======================
# BASE DE DATOS
# ======================
DB_NAME=citas_dev
DB_USER=postgres
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=5432

# ======================
# REDIS (Caché y Celery)
# ======================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1
CELERY_BROKER_DB=2

# ======================
# EMAIL (SMTP)
# ======================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
TO_EMAIL=admin@yourdomain.com

# ======================
# FRONTEND
# ======================
FRONTEND_URL=http://localhost:3001

# ======================
# CORS (URLs permitidas)
# ======================
CORS_ALLOWED_ORIGINS=http://localhost:3001,http://127.0.0.1:3001

# ======================
# SEGURIDAD (Solo Producción)
# ======================
# Descomentar estas líneas SOLO en producción con HTTPS
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# ======================
# DJANGO-AXES (Protección contra fuerza bruta)
# ======================
AXES_FAILURE_LIMIT=5
AXES_COOLOFF_TIME=1

# ======================
# OTROS
# ======================
ALLOWED_HOSTS=localhost,127.0.0.1
LANGUAGE_CODE=es
TIME_ZONE=America/Bogota
